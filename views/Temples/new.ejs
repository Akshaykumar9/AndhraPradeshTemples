<%include ../partials/header%>

    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Add New Temple</h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/temples" method="POST">
                    <div class="form-group"> <!--this is used to give spacing between inputs and button-->
                        <input class="form-control" type="text" name="templename" placeholder="Temple name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="templeimage" placeholder="Image URL">
                    </div>
                    <div class="form-group">
                        <textarea rows="4" cols="50" class="form-control" type="text" name="templedescription" placeholder="Description"></textarea>
                        <!--<input class="form-control" type="text" name="templedescription" placeholder="Description">-->
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>  <!--btn-block is used to take width of the inputboxes-->
                    </div>
                </form>
                <a href="/temples">go back</a>
            </div>
        </div>

    </div>
    <%include ../partials/footer%>