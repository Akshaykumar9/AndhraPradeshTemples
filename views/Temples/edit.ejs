<%include ../partials/header%>

    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Edit <%=Temples.name%></h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/temples/<%=Temples._id%>?_method=PUT" method="POST">
                    <div class="form-group"> <!--this is used to give spacing between inputs and button-->
                        <input class="form-control" type="text" name="temple[name]" value="<%=Temples.name%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="temple[image]" value="<%=Temples.image%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="temple[description]" value="<%=Temples.description%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>  <!--btn-block is used to take width of the inputboxes-->
                    </div>
                </form>
                <a href="/temples">go back</a>
            </div>
        </div>

    </div>
    <%include ../partials/footer%>