<%include ../partials/header%>

    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Add New Comment to <%=temple.name%></h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/temples/<%=temple._id%>/comments" method="POST">
                    <div class="form-group"> <!--this is used to give spacing between inputs and button-->
                        <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                    </div>
                   <!-- <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                    </div>-->
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>  <!--btn-block is used to take width of the inputboxes-->
                    </div>
                </form>
                <a href="/temples/<%=temple._id%>">go back</a>
            </div>
        </div>

    </div>
    <%include ../partials/footer%>